{
  "name": "root",
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "start": "npm run build && lerna run --ignore actionsflow-workflow* --parallel start",
    "clean": "lerna run --ignore actionsflow-workflow* clean && rimraf ./.cache ./dist ./coverage",
    "build": "npm run clean && lerna exec --ignore actionsflow-workflow* -- npm run build ",
    "release": "npm run test && lerna publish",
    "test": "npm run lint && jest",
    "coverage": "jest --coverage",
    "lint": "npm-run-all --continue-on-error -p lint:code lint:docs lint:other",
    "format": "npm run format:code && npm run format:other",
    "cm": "npx git-cz",
    "jest": "jest",
    "test:watch": "jest --watch",
    "lint:code": "eslint --cache --ext .js,.ts .",
    "lint:docs": "remark . --quiet --frail --ext md",
    "lint:other": "npm run prettier -- --check",
    "remark": "remark",
    "format:other": "npm run prettier -- --write",
    "format:code": "npm run lint:code -- --fix",
    "prettier": "prettier \"**/*.{md,json,js,ts,yaml,yml}\"",
    "bootstrap": "npx lerna bootstrap",
    "lerna": "npx lerna",
    "build:example": "lerna run build --scope actionsflow-workflow-example -- -- --verbose -i webhook.yml",
    "act:example": "lerna run act --scope actionsflow-workflow-example",
    "clean:example": "lerna run clean --scope actionsflow-workflow-example",
    "actionsflow": "./packages/actionsflow/cli.js",
    "postinstall": "npm run bootstrap",
    "hooks:uninstall": "node node_modules/husky/husky.js uninstall",
    "hooks:install": "node node_modules/husky/husky.js install",
    "version": "prettier --write \"**/CHANGELOG.md\""
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^10.0.0",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "cz-conventional-changelog": "^3.2.0",
    "dictionary-en": "^3.0.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "git-cz": "^4.7.0",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "remark-cli": "^8.0.1",
    "remark-frontmatter": "^2.0.0",
    "remark-lint": "^7.0.1",
    "remark-preset-lint-markdown-style-guide": "^3.0.1",
    "remark-preset-lint-recommended": "^4.0.1",
    "remark-retext": "^4.0.0",
    "retext-diacritics": "^3.0.0",
    "retext-emoji": "^7.0.1",
    "retext-english": "^3.0.4",
    "retext-indefinite-article": "^2.0.1",
    "retext-redundant-acronyms": "^3.0.0",
    "retext-sentence-spacing": "^4.0.0",
    "retext-spell": "^4.0.0",
    "retext-syntax-mentions": "^2.1.1",
    "retext-syntax-urls": "^2.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.2.0",
    "tslib": "^2.0.1",
    "typescript": "^3.9.7",
    "unified": "^9.1.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  }
}
